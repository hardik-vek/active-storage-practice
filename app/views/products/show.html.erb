<center>
Title: <%= @product.title %> </br>
Description: <%= @product.description %></br>
Price: <%= @product.price %></br>
Image: <div><%= image_tag @product.product_image.variant(:thumb), style: 'height:10vw;margin-bottom:20px;' %></div>
Download Image: <%= link_to "download image", @product.product_image.variant(:thumb), download: 'data' %></br>
Show Document: <%= link_to "View document", @product.product_pdf %></br>
Download Document: <%= link_to "download document", @product.product_pdf, download: "data" %>
<%= button_to "Edit", edit_product_path(@product),method: :get %>
<%= button_to "Delete", product_path(@product),method: :delete %>
<%= button_to "Back", products_path,method: :get %>
</center>
